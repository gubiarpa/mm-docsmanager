@model MM_DocsManager.ViewModels.FacturaCreateViewModel

@{
    ViewData["Title"] = "Nueva Factura";
}

<h4>Nueva Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crear">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroSerie" class="control-label"></label>
                <input asp-for="NumeroSerie" value="@Model.NumeroSerie" class="form-control" disabled />
                <span asp-validation-for="NumeroSerie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha</label>
                <input class="form-control" value="@DateTime.Now" disabled />
            </div>
            <div class="form-group">
                <label class="control-label">Cliente</label>
                <input asp-for="NombreCliente" class="form-control" placeholder="Nombre del cliente" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producto" class="control-label"></label>
                <input asp-for="Producto" class="form-control" placeholder="Producto" />
                <span asp-validation-for="Producto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad</label>
                <input asp-for="Cantidad" class="form-control" placeholder="Cantidad del producto" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
            </div>
        </form>
    </div>
</div>
